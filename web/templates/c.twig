

{% block content %}

<h1>Simulateur de formulaire Craft CMS</h1>
<form method="post" accept-charset="UTF-8" enctype="multipart/form-data">
    {{ csrfInput() }} {# Important pour la sécurité CSRF #}
    {{ actionInput('guest-entries/save') }}
    {{ hiddenInput('sectionId', 3) }} {# ID de la section où sauvegarder #}
    
    <label for="title">Titre:</label>
    <input id="title" type="text" name="title" required><br><br>

    <label for="marque">Mail:</label>
    <input id="marque" type="email" name="fields[mail]" required><br><br>

    <label for="photoVoiture">Password:</label>
    <input id="photoVoiture" type="password" name="fields[pass]" required><br><br>

    <button type="submit">Ajouter</button>
</form>

{% endblock %}